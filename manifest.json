{
    "manifest_version": 3,
    "name": "ChatJump",
    "version": "1.0.0",
    "description": "Quickly navigate to your messages in long ChatGPT conversations",
    "permissions": ["activeTab"],
    "host_permissions": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
        "js": ["content.js"],
        "css": ["content.css"]
      }
    ],
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }